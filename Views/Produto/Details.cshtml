@model Exemplo3.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fabricante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fabricante.Nome)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-outline-info">
        <a asp-action="Edit" asp-route-id="@Model.ProdutoID">Editar</a>
    </button>
    <button type="button" class="btn btn-outline-dark">
        <a asp-action="Index">Voltar</a>
    </button>
    
</div>
