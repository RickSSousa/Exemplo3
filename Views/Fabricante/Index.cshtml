@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Exemplo3.Models.Fabricante>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.FabricanteID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FabricanteID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FabricanteID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }))
</div>